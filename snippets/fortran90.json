{
    "Program Skeleton": {
        "prefix": "PROGRAM",
        "body": [
            "program ${1:name}",
            "implicit none",
            "",
            "ENDPROGRAM ${1:name}"
        ],
        "description": "Program Skeleton"
    },
    "Module Skeleton": {
        "prefix": "MODULE",
        "body": [
            "MODULE ${1:name}",
            "implicit none",
            "${2}",
            "contains",
            "ENDMODULE ${1:name}"
        ],
        "description": "Create a new module"
    },
    "Do Loop": {
        "prefix": "DO",
        "body": [
            "DO ${1:index} = ${2:start},${3:end}",
            "    !TODO_statement",
            "    ${4}",
            "ENDDO"
        ],
        "description": "Create a do loop"
    },
    "Function": {
        "prefix": "FUNCTION",
        "body": [
            "FUNCTION ${1:func}(${2:arg}) RESULT(${3:retval})",
            "${4:type} :: ${2:arg}",
            "${4:type} :: ${3:retval}",
            "    !TODO_add_body",
            "    ${5}",
            "ENDFUNCTION ${1:func}"
        ],
        "description": "Create a function"
    },
    "IF": {
        "prefix": "IF",
        "body": [
            "IF(${1:condtion}) THEN",
            "    !TODO_add_body",
            "    ${2}",
            "ENDIF "
        ],
        "description": "Create a IFTHEN"
    },
    "IFELIF": {
        "prefix": "IFELIF",
        "body": [
            "IF(${1:condtion}) THEN",
            "    !TODO_add_body",
            "    ${2}",
            "ELSEIF(${3:condition}) THEN",
            "    !TODO_add_body",
            "    ${4}",
            "ENDIF"
        ],
        "description": "Create a IF IFELSEIF"
    },
    "IFELSE": {
        "prefix": "IFELSE",
        "body": [
            "IF(${1:condtion}) THEN",
            "    !TODO_add_body",
            "    ${2}",
            "ELSE ",
            "    !TODO_add_body",
            "    ${3}",
            "ENDIF"
        ],
        "description": "Create a IFELSE"
    },
    "SELECTTYPE":{
        "prefix": "SELECTTYPE",
        "body": [
            "SELETYPE(${1:condtion}) ; TYPE IS(${2:condtion})",
            "    !TODO_add_body",
            "    ${3}",
            "CLASS DEFAULT ",
            "    !TODO_add_body",
            "    ${4}",
            "ENDIF"
        ],
        "description": "Create a IFELSE"
    },
    "SUBROUTINE": {
        "prefix": "SUB",
        "body": [
            "SUBROUTINE ${1:routine}(${2:arg1}, ${3: arg2})",
            "${4:type1},intent(in)  :: ${2:arg1}",
            "${5:type2},intent(out) :: ${3:arg2}",
            "    !TODO_add_body",
            "    ${6}",
            "ENDSUBROUTINE ${1:routine}"
        ],
        "description": "Create a function"
    },
    "Module documentation header": {
        "prefix": "modoc" ,
        "body": [ "!------------------------------------------------------------------------------",
                  "! ${1:Institution}, ${2:Affiliation}",
                  "!------------------------------------------------------------------------------",
                  "!",
                  "! MODULE: ${3: Module name}",
                  "!",
                  "!> @author",
                  "!> ${4:Author Name}}",
                  "!",
                  "! DESCRIPTION: ",
                  "!> ${5: Short module description}",
                  "!",
                  "! REVISION HISTORY:",
                  "! dd Mmm yyyy - Initial Version",
                  "! TODO_dd_mmm_yyyy - TODO_describe_appropriate_changes - TODO_name",
                  "!------------------------------------------------------------------------------"
        ],
        "description": "Add module documentation header"
    }


}
